<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SettingsFragment">


    <Button
        android:id="@+id/settings_save_button"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/text"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="656dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/settings_save_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ipAddressTextBox"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:autofillHints="192.168."
                android:digits="0123456789."
                android:ems="10"
                android:hint="@string/ip_address_hint"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:nextFocusDown="@id/portTextBox"
                android:textColorHighlight="@color/selected_text" />

            <EditText
                android:id="@+id/portTextBox"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:autofillHints="408628"
                android:ems="10"
                android:hint="@string/port_hint"
                android:inputType="number" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:text="Switch" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>